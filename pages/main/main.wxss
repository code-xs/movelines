/**level.wxss**/  
page{
  display: block;
  min-height: 100%;  
  background: #fffbef;
}

.times{  
  position: relative;
  text-align: right;
  font-size: 0.7rem;
  padding-right: 10rpx;
  padding-bottom: 5rpx;
  font-weight: bold;
  font-style:italic;
  margin-top: 10rpx;
  color: #f0f0f0;
}  

.lock-grid {  
  position: relative;  
  float: left;
  width: 20%;
  background:#eec700;  
  margin: 20rpx 15rpx 10rpx 20rpx;
  border-radius: 20rpx;
}

.lock-grid:active {  
  background-color: #eec790;
}

.unlock-grid {  
  position: relative;  
  float: left;
  width: 20%;
  background:#b6ad9c;  
  margin: 20rpx 15rpx 10rpx 20rpx;
  border-radius: 20rpx;
}

.lock {  
  display: block;  
  text-align: center;
  font-weight: bold;  
  line-height: 70rpx;
  color: #ffffff;
  font-size: 2.2rem;
  margin-bottom: 2rpx;
  padding-bottom: 25rpx;
  background:#eec700;
  border-radius: 20rpx;
}
.lock:active {  
  background-color: #eec790;
}
.unlock:active {  
  background-color: #b6ad90;
}
.unlock{ 
  display: block;  
  text-align: center;
  font-weight: bold;  
  line-height: 70rpx;
  color: #ffffff;
  font-size: 2.2rem;
  margin-bottom: 2rpx;
  padding-bottom: 25rpx;
  background:#b6ad9c;
  border-radius: 20rpx;
}

.curLevel:active {
  background-color: #b6ad90;
}
.curLevel{
  display: block;  
  text-align: center;  
  font-weight: bold;  
  color: #ff0000;
  background:#b6ad9c;  
  font-size: 2.5rem;
  margin: 20rpx 1rpx;
  padding: 10rpx;
  border-radius: 20rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.control{
    width: 100%;
    height: 100%;
}
.buttonsStyle{
    flex:1;
    background:#edab63;
    color:aliceblue;
    margin: 60% 30% 10% 30%;
    text-align: center;
    border-radius: 20rpx;
    font-size: 1.2rem;
    font-weight: bold;
}
.startGames{
    flex:1;
    background:#edab63;
    color:aliceblue;
    margin: 5% 25% 10% 25%;
    text-align: center;
    border-radius: 20rpx;
    font-size: 1.8rem;
    font-weight: bold;
    padding: 20rpx 50rpx 20rpx 50rpx;
}
.buttonsStyle:active {  
  background-color: #e0a30a;
}